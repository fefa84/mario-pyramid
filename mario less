#include <cs50.h>
#include <stdio.h>

int get_positive_int(string prompt);
int n;
int main(void)

{
    int Height = get_positive_int("Height: ");
    {
        for (int i=0; i<n; i++)
    {   
        for (int k=0; k<n-i; k++)
        {
            printf(" ");
        }
            
        for (int j=0; j<i+1; j++)
        {
            printf("#");
        }  
        printf("\n");
    }
    }
}

// Prompt user for positive integer
int get_positive_int(string prompt)
{
    do
    {
        n = get_int("%s", prompt);
    }
    while (n < 1 || n>8);
    return n;
}

   

